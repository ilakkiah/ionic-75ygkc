{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "pretty": true,
    "strict": true,
    "target": "es2019",
    "lib": [
      "es2019"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*.ts"
  ]
}
